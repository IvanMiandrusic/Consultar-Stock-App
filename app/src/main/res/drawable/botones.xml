<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <solid
                android:color="#88b7af" />
            <stroke
                android:width="2dp"
                android:color="#e77223" />
            <corners
                android:radius="6dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#a8e0d6"
                android:endColor="#a8e0d6"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#2ea862" />
            <corners
                 android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>

</selector>